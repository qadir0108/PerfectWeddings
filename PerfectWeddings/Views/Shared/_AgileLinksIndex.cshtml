@model IEnumerable<PerfectWeddings.DataTransferObjects.AgileLinks>
<div style="min-height: 130px;">
    <div><a class="btn grey-mint btn-outline" href="#LinkModal" data-toggle="modal" onclick="Links.BrowseAgileLinks('AgileDefect');">Add Links<i class="fa fa-link"></i></a></div>
    <br />
    <br />
    <table class="table table-striped table-hover table-condensed table-bordered" id="tblLinkDetails" width="100%">
        <thead>
            <tr>
                <th width="10%">ID</th>
                <th width="20%">Type</th>
                <th width="20%">Title</th>
                <th width="20%">Action</th>
            </tr>
        </thead>
        <tbody style="align-content:center">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Type</td>
                        <td>@item.Title</td>
                        <td>
                            @*<a onclick="UpdateAgileDefects.DeleteUpdatedLinks();" id=@item.ID class='fa fa-trash-o theme-font delupdatedRow'></a>*@
                            <a id=@item.ID class='fa fa-trash-o theme-font delupdatedRow'></a>
                            @Html.HiddenFor(model => item.LinkId)
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#tblLinkDetails").DataTable();
    });
</script>