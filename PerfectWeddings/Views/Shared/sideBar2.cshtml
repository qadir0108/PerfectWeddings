
<div class="page-sidebar-wrapper">
    <div class="page-sidebar navbar-collapse collapse">
        <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 282px;">
            <ul id="sidebarmenu" data-keep-expanded="false" data-auto-scroll="true"
                data-slide-speed="200" data-height="282" data-initialized="1" style="overflow: hidden; width: auto; height: 282px;" class="@Html.GetSidebarMenuCss()">

                <li class=" sidebar-toggler-wrapper hide">
                <!-- BEGIN SIDEBAR TOGGLER BUTTON -->
                <div class="sidebar-toggler"> </div>
                <!-- END SIDEBAR TOGGLER BUTTON -->
                </li>
                <!-- DOC: To remove the search box from the sidebar you just need to completely remove the below "sidebar-search-wrapper" LI element -->
                <li class="sidebar-search-wrapper">
                    <!-- BEGIN RESPONSIVE QUICK SEARCH FORM -->
                    <!-- DOC: Apply "sidebar-search-bordered" class the below search form to have bordered search box -->
                    <!-- DOC: Apply "sidebar-search-bordered sidebar-search-solid" class the below search form to have bordered & solid search box -->
                    <form class="sidebar-search  " action="page_general_search_3.html" method="POST">
                        <a href="javascript:;" class="remove">
                            <i class="icon-close"></i>
                        </a>
                    </form>
                    <!-- END RESPONSIVE QUICK SEARCH FORM -->
                </li>
                <li class="nav-item start">
                    <a href="@Url.Action("Index","Home")" class="nav-link nav-toggle">
                        <i class="icon-home"></i>
                        <span class="title">Home</span>
                        <span class="selected"></span>
                    </a>
                </li>
                @if (Session["IsOwner"] != null && Convert.ToBoolean(Session["IsOwner"].ToString()) == true)
                {
                    <li class="nav-item start">
                        <a href="@Url.Action("Index","UserManagement")">
                            <i class="icon-user"></i>
                            <span class="title"> User Management</span>
                            <span class="selected"></span>
                        </a>
                    </li>
                }
                @if (Session["ProjectTypeID"] != null)
                {
                    var menuType = Session["ProjectTypeID"].ToString();
                    if (menuType == "1")
                    {
                        @Html.Partial("AgileNavBar2")
                    }
                    if (menuType == "2")
                    {
                        @Html.Partial("WaterFallNavBar2")
                    }
                    if (menuType == "3")
                    {
                        @Html.Partial("PortfolioNavBar2")
                    }
                }
                @if ((Html.CheckPermission(PerfectWeddings.Enums.MiscEnums.PagePermissions.Release, (Convert.ToInt32(Session["UserKey"])))))
                {
                    <li class="nav-item start">
                        <a href="@Url.Action("Plan","Release")" class="nav-link ">
                            <i class="fa fa-thumbs-o-up"></i>
                            <span class="title">Release</span>
                            <span class="selected"></span>
                        </a>
                    </li>
                }               
                @if (Html.CheckPermission(MiscEnums.PagePermissions.Support, (Convert.ToInt32(Session["UserKey"]))))
                {
                    <li class="nav-item start">
                        <a href="@Url.Action("Index","Incident")" class="nav-link ">
                            <i class="icon-support"></i>
                            <span class="title"> Support </span>
                            <span class="selected"></span>
                        </a>
                    </li>
                } 
            </ul>
            <!-- END SIDEBAR MENU -->
            <!-- END SIDEBAR MENU -->
        </div>
    </div>
    <!-- END SIDEBAR -->
</div>
