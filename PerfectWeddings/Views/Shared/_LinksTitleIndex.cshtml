@model IEnumerable<PerfectWeddings.DataTransferObjects.LinkDataModel>
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Select Titles</h4>
        </div>
        <div class="modal-body">
            <div>
                <table class="table table-striped table-hover table-condensed table-bordered" id="tblLinkSelectionTitle" width="100%">
                    <thead>
                        <tr>
                            <th width="10%">ID</th>
                            <th width="20%">Title</th>
                            <th width="5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="rowDefect">
                                <td>
                                    @Html.DisplayFor(modelItem => item.LinkId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LinkType)
                                </td>
                                <td>
                                    @Html.CheckBoxFor(modelItem => item.IsLinkSelected, new { @class = "trCheckBoxLink" })
                                    @Html.HiddenFor(modelItem=>item.LinkTitle)
                                    @Html.HiddenFor(modelItem => item.LinkType)
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="btnSaveLinks" class="btn btn-primary" onclick="Links.CloseLinkTitleModal();">Link</button>
            <button type="button" id="BtnTitleClose" class="btn btn-outline grey-mint" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#tblLinkSelectionTitle").DataTable();
 </script>
