@model IEnumerable<PerfectWeddings.DataTransferObjects.IncidentLinkDto>
    <div style="min-height: 130px;">
        <div><a class="btn grey-mint btn-outline" onclick="Links.BrowseAgileLinks('IncidentLinks');">Add Links <i class="fa fa-link"></i></a></div>
        <br />
        <br />
        <table class="table table-striped table-hover table-condensed table-bordered" id="tblLinkDetails" width="100%">
            <thead>
                <tr>
                    <th width="10%">ID</th>
                    <th width="20%">Type</th>
                    <th width="20%">Title</th>
                    <th width="20%">Action</th>
                </tr>
            </thead>
            <tbody style="align-content:center">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr style="text-align:center">
                            <td>@item.ID</td>
                            <td>@item.Title</td>
                            <td>@item.Type</td>
                            <td>
                                <a data-id=@item.ID class='fa fa-trash-o theme-font delIncidentrow'></a>
                                @Html.HiddenFor(model => item.Incident_Id)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
<script src="~/Scripts/CaliberScripts/Link.js" type="text/javascript"></script>
