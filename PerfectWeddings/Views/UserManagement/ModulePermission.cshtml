@{

    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<style>
    #moduleTbl td, th {
        text-align: center;
    }

    #moduleTbl {
        margin-top: 10px;
    }

    #savePermissionBtn {
        margin-bottom: 10px;
    }

    .datepicker {
        z-index: 1151 !important;
    }
</style>


<link href="~/assets/global/plugins/bootstrap-switch/css/bootstrap-switch.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/global/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/global/css/components.min.css" rel="stylesheet" id="style_components" type="text/css" />
<link href="~/assets/global/css/plugins.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-lg-12">

        <div class="portlet light portlet-fit ">
            <div class="portlet-title">
                <div class="caption">
                    <i class=" icon-layers font-green"></i>
                    <span class="caption-subject font-green bold uppercase">Module Permissions</span>

                </div>
            </div>
            <div class="portlet-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <div class="col-md-2">
                                <label class="control-label">Select Company</label>

                            </div>
                            <div class="col-md-4">
                                <select class="form-control" id="compDDL" onchange="company.bindUsersByCompany();"></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <table class="table table-bordered " id="moduleTbl">
                            <thead>
                                <tr>
                                    <th> # </th>
                                    <th> Module</th>
                                    <th> Start Date</th>
                                    <th> End Date</th>
                                    <th> Users</th>
                                    <th> Grant Permission</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td> 1 </td>
                                    <td> <span class="label label-success"> Portfolio Management</span> </td>

                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control StartDate" id="portfolioStartDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="modulePageSettings.removeStartDate(this);">X</button>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control EndDate" id="portfolioEndDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" onclick="modulePageSettings.removeEndDate(this);" type="button">X</button>
                                            </span>
                                        </div>

                                    </td>

                                    <td>
                                        <select class="selectpicker moduleUsersDDL" multiple id="portfolioUserDDL"></select>
                                    </td>
                                    <td> <input type="checkbox" id="portfolioCheckBox" value="@PerfectWeddings.Enums.Modules.PortfolioManagement" />  </td>

                                </tr>
                                <tr>
                                    <td> 2 </td>
                                    <td> <span class="label  label-info"> Process Management</span> </td>

                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control StartDate" id="processStartDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="modulePageSettings.removeStartDate(this);">X</button>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control EndDate" id="processEndDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" onclick="modulePageSettings.removeEndDate(this);" type="button">X</button>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <select class="selectpicker moduleUsersDDL" multiple id="processUserDDL"></select>
                                    </td>
                                    <td> <input type="checkbox" id="processCheckBox" value="@PerfectWeddings.Enums.Modules.ProcessManagement" />  </td>

                                </tr>
                                <tr>
                                    <td> 3 </td>
                                    <td> <span class="label  label-warning"> Test Execution </span> </td>

                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control StartDate" id="testStartDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="modulePageSettings.removeStartDate(this);">X</button>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control EndDate" id="testEndDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" onclick="modulePageSettings.removeEndDate(this);" type="button">X</button>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <select class="selectpicker moduleUsersDDL" multiple id="testUserDDL"></select>
                                    </td>
                                    <td> <input type="checkbox" id="testCheckBox" value="@PerfectWeddings.Enums.Modules.TestExecution" />  </td>

                                </tr>
                                <tr>
                                    <td> 4 </td>
                                    <td> <span class="label  label-danger"> Tracking and Monitoring</span> </td>

                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control StartDate" id="trackStartDate" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="modulePageSettings.removeStartDate(this);">X</button>
                                            </span>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control EndDate" id="trackEndDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" onclick="modulePageSettings.removeEndDate(this);" type="button">X</button>
                                            </span>
                                        </div>

                                    </td>
                                    <td>
                                        <select class="selectpicker moduleUsersDDL" multiple id="trackUserDDL"></select>
                                    </td>
                                    <td> <input type="checkbox" id="trackCheckBox" value="@PerfectWeddings.Enums.Modules.TrackMonitoring" />  </td>

                                </tr>
                                <tr>
                                    <td> 5 </td>
                                    <td> <span class="label label-info"> Release Management </span> </td>

                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control StartDate" id="releaseStartDate" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="modulePageSettings.removeStartDate(this);">X</button>
                                            </span>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control EndDate" id="releaseEndDate"  />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" onclick="modulePageSettings.removeEndDate(this);" type="button">X</button>
                                            </span>
                                        </div>

                                    </td>
                                    <td>
                                        <select class="selectpicker moduleUsersDDL" multiple id="releaseUserDDL"></select>
                                    </td>
                                    <td> <input type="checkbox" id="releaseCheckBox" value="@PerfectWeddings.Enums.Modules.ReleaseManagement" />  </td>

                                </tr>
                                <tr>
                                    <td> 6 </td>
                                    <td> <span class="label label-default"> Support and Maintenance </span> </td>

                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control StartDate" id="supportStartDate" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" type="button" onclick="modulePageSettings.removeStartDate(this);">X</button>
                                            </span>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="input-group">
                                            <input type="text" class="form-control EndDate" id="supportEndDate" />
                                            <span class="input-group-btn">
                                                <button class="btn btn-danger" onclick="modulePageSettings.removeEndDate(this);" type="button">X</button>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <select class="selectpicker moduleUsersDDL" multiple id="supportUserDDL"></select>
                                    </td>
                                    <td> <input type="checkbox" id="supportCheckBox" value="@PerfectWeddings.Enums.Modules.SupportMaintenance" />  </td>

                                </tr>


                            </tbody>
                        </table>

                        <input type="button" id="savePermissionBtn" onclick="crudOp.SaveUpdate();" class="btn btn-primary  pull-right" value="Save" />
                    </div>

                </div>
            </div>

        </div>
    </div>

</div>

<script src="~/assets/global/plugins/bootstrap-select/js/bootstrap-select.min.js" type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->
