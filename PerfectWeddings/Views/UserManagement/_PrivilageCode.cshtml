@model IEnumerable<PerfectWeddings.DataTransferObjects.PrivilegeCodeDto>

<style>
    .table.dataTable {
        margin: 0px 0 !important;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 0px;
        margin-left: 0px;
        display: inline;
        border: 0px;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            border: 0px;
        }

    ul.pagination {
        margin-left: 100px;
    }
</style>

<div class="" id="Privilegetab">
    <div id="sample_1_wrapper" class="dataTables_wrapper no-footer">
        <div class="portlet ">

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="Btn_Create_New_Privilege_Modal" class="btn btn-default" data-toggle="modal" onclick='PrivilegeManagement.CreatePrivilegeModal();'>
                                    Add New

                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn grey-mint btn-outline dropdown-toggle" href="#" data-toggle="dropdown" title="Tools" data-close-others="true">
                                    <i class="fa fa-cogs"></i>
                                </button>
                                <ul class="dropdown-menu pull-right" id="sample_privilagecode_tool">
                                    <li>
                                        <a href="javascript:;" data-action="0" class="tool-action">
                                            <i class="fa fa-print"></i> Print
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;" data-action="4" class="tool-action">
                                            <i class="fa fa-file-excel-o"></i> Export to Excel
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;" data-action="2" class="tool-action">
                                            <i class="fa fa-file-pdf-o"></i> Save as PDF
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="portlet-body">
                    <div class="table-container">
                        <div id="datatable_ajax_wrapper" class="">
                            <table class="table table-striped table-bordered table-hover table-checkable dataTable tblPrivilege" id="tblPrivilege" aria-describedby="datatable_ajax_info" role="grid">
                                <thead>
                                    <tr role="row" class="heading">

                                        <th class="text-center" width="5%"> Name</th>
                                        <th class="text-center" width="10%"> Created On </th>
                                        <th class="text-center" width="10%"> Actions </th>
                                    </tr>

                                </thead>

                                <tfoot>
                                    <tr id="filterrow">
                                        <th width="5%"></th>
                                        <th width="10%"></th>
                                        <th id="txtaction" style="display:none" width="10%"></th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center" width="5%">@item.PrivilegeCode</td>
                                            <td class="text-center" width="10%">@item.CreatedOn</td>
                                            <td class="text-center" width="10%">
                                                <a class='sample_editable_2_new EditPrivilege' data-url="@Url.Action("_UpdatePrivilege", "Roles", new {@id = @item.Id })" data-name='"@item.PrivilegeCode"' value="@item.Id" onclick="PrivilegeManagement.UpdatePrivilege(@item.Id)"><i class='fa fa-pencil' aria-hidden='true'></i></a> |
                                                <a class='btnDeletePrivilege' data-url="@Url.Action("_DeletePrivilege", "Roles", new { @id = @item.Id })" data-name='"@item.PrivilegeCode"' onclick="PrivilegeManagement.DeletePrivilege(@item.Id)"><i class='fa fa-trash-o' aria-hidden=true></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@*for Model pop up*@
<div class="modal fade bs-modal-lg" id="createPrivilegeModel" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" id="divcreatePrivilege"></div>
</div>
<div class="modal fade bs-modal-lg" id="updatePrivilegeModel" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" id="divupdatePrivilege"></div>
</div>
<div class="modal fade bs-modal-lg" id="deletePrivilegeModel" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" id="divdeletePrivilege"></div>
</div>

<script src="~/Scripts/CaliberScripts/UserManagement.js"></script>
<script src="~/assets/global/scripts/datatable.js"></script>
<script src="~/assets/global/plugins/datatables/datatables.min.js"></script>

<script src="~/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js"></script>

<script src="~/assets/global/scripts/app.min.js"></script>
<script src="~/assets/pages/scripts/table-datatables-buttons.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        PrivilegeManagement.PrivilegeDataTable();
    });

</script>







