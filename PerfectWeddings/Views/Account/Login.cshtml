@model PerfectWeddings.ViewModels.LoginModel
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    }
        

<div class="tp-page-head">
    <!-- page header -->
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8">
                <div class="page-header text-center">
                    <div class="icon-circle">
                        <i class="icon icon-size-60 icon-padlock-1 icon-white"></i>
                    </div>
                    <h1>Welcome back to your account</h1>
                    <p>We're happy to have you back.</p>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.page header -->
<div class="tp-breadcrumb">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <ol class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li class="active">Login</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div id="main-container" class="main-container">
    <!-- main container -->
    <div class="st-tabs">
        <!-- shortcode -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#supplier" aria-controls="supplier" role="tab" data-toggle="tab">Supplier Login</a></li>
                        <li role="presentation"><a href="#coupleLogin" aria-controls="coupleLogin" role="tab" data-toggle="tab">Couple Login</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="supplier">
                            <form id="frmSupplierLogin" role="form">

                                <!-- Text input-->
                                <div class="form-group has-feedback">
                                    <label class="control-label" for="txtSupplierName">User Name<span class="required">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-user"></span>
                                        </div>
                                        <input id="txtSupplierName" name="txtSupplierName" type="text" placeholder="User name" class="form-control input-md" required>
                                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                    </div>

                                </div>
                                <div class="form-group has-feedback">
                                    <label class="control-label" for="passwordSupplier">Password<span class="required">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </div>
                                        <input type="password" placeholder="Password" id="passwordSupplier" class="form-control input-md" required>
                                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <!-- Button -->
                                <div class="form-group">
                                    <button id="btnSupplierLogin" name="btnSupplierLogin" class="btn btn-primary">Log In</button>
                                </div>
                            </form>



                        </div>
                        <div role="tabpanel" class="tab-pane" id="coupleLogin">
                            <form id="frmCoupleLogin" role="form">

                                <!-- Text input-->
                                <div class="form-group has-feedback">
                                    <label class="control-label" for="txtCoupleName">User Name<span class="required">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <span class="glyphicon glyphicon-user"></span>
                                        </div>
                                        <input id="txtCoupleName" name="txtCoupleName" type="text" placeholder="User name" class="form-control input-md" required>
                                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                    </div>

                                </div>
                                <div class="form-group has-feedback">
                                    <label class="control-label" for="passwordCouple">Password<span class="required">*</span></label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="glyphicon glyphicon-lock"></i>
                                        </div>
                                        <input type="password" placeholder="Password" id="passwordCouple" class="form-control input-md" required>
                                        <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <!-- Button -->
                                <div class="form-group">
                                    <button id="btnCoupleLogin" name="btnCoupleLogin" class="btn btn-primary">Log In</button>
                                </div>
                            </form>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div></div>
    <script type="text/javascript">

        var pw = pw || {};

        $(document).ready(function () {

            // Register button selector
            $('#btnSupplierLogin').click(function () {
          
                pw.security.supplierLogin($("#frmSupplierLogin"), $('#txtSupplierName').val(), $('#passwordSupplier').val());
            });

      
            $('#btnCoupleLogin').click(function () {
                pw.security.coupleLogin($("#frmCoupleLogin"), $('#txtCoupleName').val(), $('#passwordCouple').val());
            });

        });

    </script>
   